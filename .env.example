
#make sure to make .env file on your environment since it will be ignored when cloning
# Application
NODE_ENV=development
PORT=3000

# CORS - comma separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

#means 10 requests per 60 seconds
# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# JWT
JWT_SECRET=your-secret-make-it-long-in-production
JWT_EXPIRES_IN=24h

# Database (PostgreSQL - if u use supabase maybe u need to use pooler session)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=nestjs_db
# Example
# DB_HOST=db.hurweeeeeeeeeticxiw.supabase.co
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=yourownpassword
# DB_DATABASE=postgres

#Google OAUTH
GOOGLE_CLIENT_ID="your-client-id"
GOOGLE_CLIENT_SECRET="your-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3000/api/users/auth/google/callback" #{api is your app global prefix don't forget to change/add it also to the google console}
FRONTEND_URL="http://localhost:3000"  # optional - for redirect after OAuth - if there's a frontend 

# Storage (s3 | r2)
STORAGE_PROVIDER=s3
# R2: https://<account-id>.r2.cloudflarestorage.com
# S3: leave empty (uses default AWS endpoint)
STORAGE_ENDPOINT=
STORAGE_REGION=us-east-1 #you can leave it like that for R2 or make it 'auto'
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_BUCKET=my-bucket
# domain for public URLs
STORAGE_PUBLIC_URL=public-url

# Email configuration
# Provider: 'smtp' | 'sendgrid' | 'resend'
MAIL_PROVIDER=smtp
MAIL_FROM="Your App <noreply@yourapp.com>"

# Email Queue (BullMQ)
# Set to 'true' to enable async email processing via Redis queue
# Set to 'false' for synchronous email sending (no Redis required)
MAIL_QUEUE_ENABLED=false

# Redis (only required when MAIL_QUEUE_ENABLED=true)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=

# SMTP config (when MAIL_PROVIDER=smtp)
# works with Gmail, Outlook, Amazon SES, custom SMTP servers, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (when MAIL_PROVIDER=sendgrid)
# npm install @sendgrid/mail (uncomment provider implementation)
SENDGRID_API_KEY=SG.xxxx

# Resend (when MAIL_PROVIDER=resend)
# npm install resend (uncomment provider implementation)
RESEND_API_KEY=re_xxxx

